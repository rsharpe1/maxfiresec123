<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="zuma_equipments_inherit_report_saleorder_document" inherit_id="sale.report_saleorder_document">
        <xpath expr="//div[@id='informations']" position="after">
            <h4 class="mt16" t-if="doc.product_id">
                <t>
                    <span>Equipment Information:</span>
                </t>
            </h4>
            <div class="row mt32 mb32" id="equipment_information" t-if="doc.product_id">
                <div t-if="doc.product_id" class="col-auto col-3 mw-100 mb-2">
                    <strong>Equipment:</strong>
                    <p class="m-0" t-field="doc.product_id"/>
                </div>
                <div t-if="doc.lot_id" class="col-auto col-3 mw-100 mb-2">
                    <strong>Serial Number:</strong>
                    <p class="m-0" t-field="doc.lot_id"/>
                </div>
            </div>
        </xpath>

        <xpath expr="//div[@id='informations']/div/strong" position="replace">
           <strong>Customer PO#:</strong>
        </xpath>
    </template>
</odoo>
