<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="sale_order_portal_content_inherit" inherit_id="sale.sale_order_portal_content">
        <xpath expr="//h3[@id='details']" position="replace">
            <div class="row" id="reference">
                <div class="mb-3 col-4" t-if="sale_order.client_order_ref">
                    <strong>Customer PO#:</strong>
                    <span t-field="sale_order.client_order_ref"/>
                </div>
            </div>
            <span>
                <h3>Equipment information:</h3>
            </span>
            <div class="row" id="equipment_detials">
                <div t-if="sale_order.product_id" class="col-auto col-3 mw-100 mb-2">
                    <strong>Equipment:</strong>
                    <p class="m-0" t-field="sale_order.product_id"/>
                </div>
                <div t-if="sale_order.lot_id" class="col-auto col-3 mw-100 mb-2">
                    <strong>Serial Number:</strong>
                    <p class="m-0" t-field="sale_order.lot_id"/>
                </div>
            </div>
        </xpath>
    </template>

</odoo>