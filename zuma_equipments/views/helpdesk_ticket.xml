<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="zuma_equipments_inherit_helpdesk_ticket_view_form_inherit_helpdesk_stock" model="ir.ui.view">
        <field name="name">zuma_equipments.inherit.helpdesk_ticket_view_form_inherit_helpdesk_stock</field>
        <field name="model">helpdesk.ticket</field>
        <field name="inherit_id" ref="helpdesk_stock.helpdesk_ticket_view_form_inherit_helpdesk_stock"/>
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                <button name="action_open_product_lot_wizard" string="Add Customer Equipment" type="object"
                        class="oe_highlight" attrs="{'invisible': [('partner_id', '=', False)]}"/>
            </xpath>

            <xpath expr="//field[@name='product_id']" position="before">
                <field name="product_domain" invisible="1"/>
                <field name="lots_domain" invisible="1"/>
            </xpath>

            <xpath expr="//field[@name='product_id']" position="attributes">
                <attribute name="attrs">{}</attribute>
                <attribute name="options">{'no_open': True, 'no_create': True}</attribute>
                <attribute name="domain">product_domain</attribute>
                <attribute name="context">{'default_sale_ok': False, 'default_purchase_ok': False,
                    'default_type':'product', 'default_tracking': 'serial'}
                </attribute>
                <attribute name="string">Equipment</attribute>
            </xpath>
            <xpath expr="//field[@name='lot_id']" position="attributes">
                <attribute name="attrs">{}</attribute>
                <attribute name="options">{'no_open': True, 'no_create': True}</attribute>
                <attribute name="context">{'default_product_id': product_id, 'partner_id': partner_id, 'reference': name, 'is_equipment': True}</attribute>
                <attribute name="string">Equipment Serial Number</attribute>
                <attribute name="domain">lots_domain</attribute>
            </xpath>

        </field>
    </record>
</odoo>
