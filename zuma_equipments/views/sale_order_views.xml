<odoo>
    <!-- Inherit Form View to Modify it -->
    <record id="zuma_equipments_inherit_view_order_form" model="ir.ui.view">
        <field name="name">zuma_equipments.inherit.view_order_form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">

            <xpath expr="//page[@name='other_information']/group" position="inside">
                <group>
                    <group string="Equipment &amp; Serial Info">
                        <field name="product_id"/>
                        <field name="lot_id"/>
                    </group>
                </group>
            </xpath>

        </field>
    </record>
</odoo>
