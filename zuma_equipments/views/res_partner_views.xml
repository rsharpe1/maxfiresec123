<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <record id="res_partner_form_inherit" model="ir.ui.view">
        <field name="name">res.partner.for.inherit</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">

            <xpath expr="/form/*" position="before">
                <header>
                    <field name="show_equipment_button" invisible="1"/>
                    <button name="action_open_zuma_equipments_wizard" string="Add Customer Equipment" type="object"
                            class="oe_highlight" attrs="{'invisible': ['|', ('is_company', '=', False), ('show_equipment_button', '=', False)]}"/>
                </header>
            </xpath>
            <xpath expr="//notebook" position="inside">
                <page string="Customer Equipments" attrs="{'invisible': [('parent_id', '!=', False)]}">
                    <field name="quant_ids" readonly="1" >
                        <tree>
                            <field name="product_id"/>
                            <field name="lot_id"/>
                            <field name="location_id"/>
                            <field name="create_date"/>
                        </tree>
                    </field>
                </page>
            </xpath>

            <xpath expr="//field[@name='vat']" position="after">
                <field name="allow_equipment"  attrs="{'invisible': [('type', 'not in',('contact'))]}"/>
            </xpath>
        </field>
    </record>
</odoo>
