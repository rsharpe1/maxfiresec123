<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_product_lot_wizard_form" model="ir.ui.view">
        <field name="name">product.lot.wizard.form</field>
        <field name="model">product.lot.wizard</field>
        <field name="arch" type="xml">
            <form string="Product and Lot Details">
                <sheet>
                    <group>
                        <group>
                            <field name="product_categ_id" invisible="1"/>
                            <field name="product_id" context="{'default_sale_ok': False, 'default_categ_id': product_categ_id, 'default_purchase_ok': False, 'default_type':'product', 'default_tracking': 'serial'}"/>
                        </group>
                        <group>
                            <field name="lot_name"/>
                        </group>
                    </group>
                    <footer>
                        <button name="action_create_product_lot_details" string="Add" type="object" class="btn-primary"/>
                        <button string="Cancel" class="btn-secondary" special="cancel" />
                    </footer>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
